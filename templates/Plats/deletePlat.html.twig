{% extends 'template.html.twig'%}
{% block title %}Delete Plat{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Delete Plat</h2>
        <div class="card">
            <div class="card-body">
                <p>Are you sure you want to delete this Plat?</p>
                <form method="post" action="{{ path('plat_delete', {'id': plat.idPlat}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="{{ path('app_plat') }}" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
