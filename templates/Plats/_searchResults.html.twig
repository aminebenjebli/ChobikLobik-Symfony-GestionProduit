
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Prix</th>
        <th>Image</th>
        <th>Action</th>
    </tr>
    {% for plat in plats %}
        <tr>
            <td>{{ plat.nom }}</td>
            <td>{{ plat.description }}</td>
            <td>{{ plat.prix }}</td>
            <td>
                <img src="{{ asset('uploadsProduit/' ~ plat.image) }}" alt="Image du produit"  style="max-width: 100px; max-height: 100px;">
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Actions" style="width: 100%;">
                    <a href="{{ path('plat_edit', {'id': plat.idPlat}) }}" class="btn btn-primary" style="background-color: #2C8CBC; background-image: linear-gradient(to bottom right, #4DA1CB, #4399C4);">Edit</a>
                    <a href="{{ path('plat_delete', {'id': plat.idPlat}) }}"  class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                </div>
            </td>
        </tr>
    {% endfor %}
</table>
